<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black_overlay</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/black_overlay</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <style name="MyActionBar" parent="@android:style/Animation.Translucent">
        <item name="android:background">#0099cc</item>
    </style>
    
    <style name="MyThemeLightActionBarColored" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item> 
        <item name="android:background">#B7B700</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <!-- <style name="AppTheme" parent="android:Theme.Material">
        Customize your theme here
    </style> -->
</resources>